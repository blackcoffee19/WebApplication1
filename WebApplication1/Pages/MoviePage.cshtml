<div class="row">
  @foreach (var movie in Model.list) {
    <div class="card" style="width: 18rem;">
        <a style="margin:0 0 100px 0;"data-toggle="collapse" href="#detail" role="button" aria-expanded="false" aria-controls="collapseExample">
          <img src=@movie.Image class="card-img-top" alt="Movie Img">
        </a>
        <div class="collapse" id="detail">
          <div class="card card-body">
            <h3>@movie.TitleMovie</h3>
            <h5>IMDb: @movie.IMDb</h5>
            <p>Director: @movie.Director</p>
            <p>Cast: @movie.Cast</p>
          </div>
        </div>
    </div>
  }
</div>
